<section class="pt-5">
   <div class="container shadow section-sm rounded">
      <div class="columns is-multiline">
         <!-- sidebar -->
         <div class="column is-3-desktop is-12-tablet">
            <ul class="sidenav">
              <li title="Capsules" class="sidelist parent active">
                <a href="/capsules">Capsules</a>
                <ul>
                  <% capsules.forEach((capsule) => { %>
                    <li class="sidelist">
                        <a href="/capsules/<%= capsule.id %>"><%= capsule.serial %></a>
                    </li>
                  <% }); %>
                </ul>
              </li>
              <li class="sidelist">
                <a href="/cores">Cores</a>
              </li>
              <li class="sidelist">
                <a href="/crew">Crew</a>
              </li>
              <li class="sidelist">
                <a href="/dragons">Dragons</a>
              </li>
              <li class="sidelist">
                <a href="/landpads">Landpads</a>
              </li>
              <li class="sidelist">
                <a href="/launches">Launches</a>
              </li>
              <li class="sidelist">
                <a href="/launchpads">Launchpads</a>
              </li>
              <li class="sidelist">
                <a href="/payloads">Payloads</a>
              </li>
              <li class="sidelist">
                <a href="/roadster">Roadster</a>
              </li>
              <li class="sidelist">
                <a href="/rockets">Rockets</a>
              </li>
              <li class="sidelist">
                <a href="/ships">Ships</a>
              </li>
              <li class="sidelist">
                <a href="/starlink">Starlink</a>
              </li>
            </ul>
         </div>

         <!-- body -->
         <div class="column is-8-desktop is-12-tablet">
            <div class="px-4">
               <h2 class="mb-4 has-text-weight-medium">Capsules</h2> <!-- main content -->
               <div class="content">
                  <p><img src="images/getting-started.jpg" width="500px" alt="image"></p>
                  <% capsules.forEach((capsule) => { %>
                     <p><strong><a href="/capsules/<%= capsule.id %>"><%= capsule.serial %></a></strong></p>
                     <p><%= capsule.last_update %></p>
                     <div class="mt-5">
                        <% if(capsule.status === 'active') { %>
                           <div class="badge changed">Active</div>
                        <% } else if (capsule.status === 'unknown') { %>
                           <div class="badge unreleased">Unknown</div>
                        <% } else if (capsule.status === 'retired') { %>
                           <div class="badge removed">Retired</div>
                        <% } else if (capsule.status === 'destroyed') { %>
                           <div class="badge depricated">Destroyed</div>
                        <% } %>
                        
                        <h5>Launches</h5>
                        <ul>
                           <% capsule.launches.forEach((launch) => { %>
                              <li><%= launch %></li>
                           <% }); %>
                        </ul>
                     </div>
                  <% }); %>
               </div>
               <!-- navigation -->
               <nav class="pagination">
                  <a class="nav nav-prev" href="https://examplesite.com/"><i class="ti-arrow-left mr-2"></i>
                     <span class="d-none d-md-block">Hugo documentation theme</span></a>
                  <a class="nav nav-next" href="https://examplesite.com/basic-startup/requirments/"> <span
                        class="d-none d-md-block">Requirments</span><i class="ti-arrow-right ml-2"></i></a>
               </nav>
            </div>
         </div>
      </div>
   </div>
</section>