<section class="pt-5">
  <div class="container shadow section-sm rounded">
    <div class="columns is-multiline">
      <!-- sidebar -->
      <div class="column is-3-desktop is-12-tablet">
        <ul class="sidenav">
          <li class="sidelist">
            <a href="/capsules">Capsules</a>
          </li>
          <li class="sidelist">
            <a href="/cores">Cores</a>
          </li>
          <li class="sidelist">
            <a href="/crew">Crew</a>
          </li>
          <li title="dragons" class="sidelist">
            <a href="/dragons">Dragons</a>
          </li>
          <li class="sidelist">
            <a href="/landpads">Landpads</a>
          </li>
          <li class="sidelist">
            <a href="/launches">Launches</a>
          </li>
          <li class="sidelist">
            <a href="/launchpads">Launchpads</a>
          </li>
          <li class="sidelist">
            <a href="/payloads">Payloads</a>
          </li>
          <li class="sidelist">
            <a href="/roadster">Roadster</a>
          </li>
          <li class="sidelist">
            <a href="/rockets">Rockets</a>
          </li>
          <li class="sidelist">
            <a href="/ships">Ships</a>
          </li>
          <li class="sidelist">
            <a href="/starlink">Starlink</a>
          </li>
        </ul>
      </div>

      <!-- body -->
      <div class="column is-8-desktop is-12-tablet">
        <div class="px-4">
          <h2 class="mb-4 has-text-weight-medium">History</h2> <!-- main content -->
          <div class="content">
              <% history.forEach((event) => { %>
                  <div class="card">
                      <div class="card-content">
                          <div class="media">
                              <div class="media-content">
                                  <p class="title is-4">
                                      <%= event.title %>
                                      <% if (event.links.article) { %>
                                          - <a href="<%= event.links.article %>">article</a>
                                      <% } %>
                                  </p>
                              </div>
                          </div>
                          <div class="content">
                              <%= event.details %>
                              <br />
                              <br />
                              <time><%= event.event_date_utc %></time>
                          </div>
                      </div>
                  </div>
              <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>