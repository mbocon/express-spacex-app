<section class="pt-5">
  <div class="container shadow section-sm rounded">
    <div class="columns is-multiline">
      <!-- sidebar -->
      <div class="column is-3-desktop is-12-tablet">
        <ul class="sidenav">
          <li title="Crew" class="sidelist">
            <a href="/crew">Crew</a>
          </li>
          <li class="sidelist">
            <a href="/capsules">Capsules</a>
          </li>
          <li class="sidelist">
            <a href="/cores">Cores</a>
          </li>
          <li class="sidelist">
            <a href="/dragons">Dragons</a>
          </li>
          <li class="sidelist">
            <a href="/landpads">Landpads</a>
          </li>
          <li class="sidelist">
            <a href="/launches">Launches</a>
          </li>
          <li class="sidelist">
            <a href="/launchpads">Launchpads</a>
          </li>
          <li class="sidelist">
            <a href="/payloads">Payloads</a>
          </li>
          <li class="sidelist">
            <a href="/roadster">Roadster</a>
          </li>
          <li class="sidelist">
            <a href="/rockets">Rockets</a>
          </li>
          <li class="sidelist">
            <a href="/ships">Ships</a>
          </li>
          <li class="sidelist">
            <a href="/starlink">Starlink</a>
          </li>
        </ul>
      </div>

      <!-- body -->
      <div class="column is-8-desktop is-12-tablet">
        <div class="px-4">
          <img class="img-fluid" src="https://logos-world.net/wp-content/uploads/2020/09/SpaceX-Logo.png" alt="Space X" width="310px">
          <img src="images/spacex-yJv97tE7GDM.jpg" class="img-fluid" alt="rocket">
          <div class="content mt-2">
            <p>
              <%= company.summary %>
            </p>
            <ul>
              <li>Founder: <%= company.founder %></li>
              <li>Founded: <%= company.founded %></li>
              <li>Employees: <%= company.employees %></li>
              <li>Vehicles: <%= company.vehicles %></li>
              <li>Launch Sites: <%= company.sites %></li>
              <li>Test Sites: <%= company.test_sites %></li>
              <li>CEO: <%= company.ceo %></li>
              <li>CTO: <%= company.cto %></li>
              <li>COO: <%= company.coo %></li>
              <li>CTO - Propulsion: <%= company.cto_propulsion %></li>
              <li>Valuation: <%= company.valuation.toLocaleString('en-US'); %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>