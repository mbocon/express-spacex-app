<section class="pt-5">
  <div class="container shadow section-sm rounded">
    <div class="columns is-multiline">
      <!-- sidebar -->
      <div class="column is-3-desktop is-12-tablet">
        <ul class="sidenav">
          <li class="sidelist parent active">
            <a href="/ships">Ships</a>
            <ul>
              <% ships.forEach((ship)=> { %>
                <li class="sidelist">
                  <a href="/ships/<%= ship.id %>">
                    <%= ship.name %>
                  </a>
                </li>
              <% }); %>
            </ul>
          </li>
          <li class="sidelist">
            <a href="/capsules">Capsules</a>
          </li>
          <li class="sidelist">
            <a href="/cores">Cores</a>
          </li>
          <li class="sidelist">
            <a href="/crew">Crew</a>
          </li>
          <li class="sidelist">
            <a href="/dragons">Dragons</a>
          </li>
          <li class="sidelist">
            <a href="/landpads">Landpads</a>
          </li>
          <li class="sidelist">
            <a href="/launches">Launches</a>
          </li>
          <li class="sidelist">
            <a href="/launchpads">Launchpads</a>
          </li>
          <li class="sidelist">
            <a href="/payloads">Payloads</a>
          </li>
          <li class="sidelist">
            <a href="/roadster">Roadster</a>
          </li>
          <li class="sidelist">
            <a href="/rockets">Rockets</a>
          </li>
          <li class="sidelist">
            <a href="/starlink">Starlink</a>
          </li>
        </ul>
      </div>

      <!-- body -->
      <div class="column is-8-desktop is-12-tablet">
        <div class="px-4">
          <h2 class="mb-4 has-text-weight-medium">Ships</h2>
          <div class="content">
            <% ships.forEach((ship)=> { %>
              <div class="card">
                <div class="card-content">
                  <div class="content">
                    <% if (ship.image) { %>
                      <p><img src="<%= ship.image %>" alt="<%= ship.name %>"></p>
                    <% } %>
                    <p><strong><a href="/ships/<%= ship.id %>">
                          <%= ship.name %>
                        </a></strong></p>
                    <div class="mt-5">
                      Type: <%= ship.type %>
                    </div>
                  </div>
                </div>
              </div>
              <hr />
            <% }); %>

            <% if (ships.length === 0) { %>
               <p><%= message %></p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>