<section class="pt-5">
  <div class="container shadow section-sm rounded">
    <div class="columns is-multiline">
      <!-- sidebar -->
      <div class="column is-3-desktop is-12-tablet">
        <ul class="sidenav">
          <li class="sidelist parent active">
            <a href="/launches">Launches</a>
            <ul>
              <% launches.forEach((launch)=> { %>
              <li class="sidelist">
                <a href="/launches/<%= launch.id %>">
                  <%= launch.name %>
                </a>
              </li>
              <% }); %>
            </ul>
          </li>
          <li class="sidelist">
            <a href="/capsules">Capsules</a>
          </li>
          <li class="sidelist">
            <a href="/cores">Cores</a>
          </li>
          <li class="sidelist">
            <a href="/crew">Crew</a>
          </li>
          <li title="dragons" class="sidelist">
            <a href="/dragons">Dragons</a>
          </li>
          <li class="sidelist">
            <a href="/landpads">Landpads</a>
          </li>
          <li class="sidelist">
            <a href="/launchpads">Launchpads</a>
          </li>
          <li class="sidelist">
            <a href="/payloads">Payloads</a>
          </li>
          <li class="sidelist">
            <a href="/roadster">Roadster</a>
          </li>
          <li class="sidelist">
            <a href="/rockets">Rockets</a>
          </li>
          <li class="sidelist">
            <a href="/ships">Ships</a>
          </li>
          <li class="sidelist">
            <a href="/starlink">Starlink</a>
          </li>
        </ul>
      </div>

      <!-- body -->
      <div class="column is-8-desktop is-12-tablet">
        <div class="px-4">
          <h2 class="mb-4 has-text-weight-medium">Launches - <a class="has-text-weight-light"
              href="/launches/search">search</a></h2>
          <div class="content">
            <% launches.forEach((launch)=> { %>
            <div class="card">
              <div class="card-content">
                <div class="content">
                  <% if(launch.links.patch.small) { %>
                  <div class="card-image">
                    <figure class="image is-4by3">
                      <img src="<%= launch.links.patch.small %>" alt="patch">
                    </figure>
                  </div>
                  <% } else if (launch.links.flickr.original.length) { %>
                  <div class="card-image">
                    <figure class="image is-4by3">
                      <img src="<%= launch.links.flickr.original[0] %>" alt="<%= launch.name %>">
                    </figure>
                  </div>
                  <% } %>
                  <p><strong><a href="/launches/<%= launch.id %>">
                        Flight <%= launch.flight_number %> - <%= launch.name %>
                      </a></strong></p>
                  <div class="mt-5">
                    <%= launch.details %>
                  </div>
                </div>
              </div>
            </div>
            <hr />
            <% }); %>

            <% if (launches.length === 0) { %>
            <p><%= message %></p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>