<section class="pt-5">
  <div class="container shadow section-sm rounded">
    <div class="columns is-multiline">
      <!-- sidebar -->
      <div class="column is-3-desktop is-12-tablet">
        <ul class="sidenav">
          <li title="Crew" class="sidelist parent active">
            <a href="/crew">Crew</a>
            <ul>
              <% crew.forEach((member)=> { %>
                <% let firstName=member.name.split(' ')[0]; %>
                    <% let lastName = member.name.split(' ')[1]; %>
                    <li class="sidelist">
                        <a href="/single-crew/<%= firstName %>/<%= lastName %>"><%= member.name %></a>
                    </li>
                  <% }); %>
                </ul>
              </li>
              <li class="sidelist">
                <a href="/capsules">Capsules</a>
              </li>
              <li class="sidelist">
                <a href="/cores">Cores</a>
              </li>
              <li class="sidelist">
                <a href="/dragons">Dragons</a>
              </li>
              <li class="sidelist">
                <a href="/landpads">Landpads</a>
              </li>
              <li class="sidelist">
                <a href="/launches">Launches</a>
              </li>
              <li class="sidelist">
                <a href="/launchpads">Launchpads</a>
              </li>
              <li class="sidelist">
                <a href="/payloads">Payloads</a>
              </li>
              <li class="sidelist">
                <a href="/roadster">Roadster</a>
              </li>
              <li class="sidelist">
                <a href="/rockets">Rockets</a>
              </li>
              <li class="sidelist">
                <a href="/ships">Ships</a>
              </li>
              <li class="sidelist">
                <a href="/starlink">Starlink</a>
              </li>
            </ul>
         </div>

         <!-- body -->
        <div class="column is-8-desktop is-12-tablet">
            <div class="px-4">
               <h2 class="mb-4 has-text-weight-medium">Crew</h2> <!-- main content -->
               <div class="content">
                    <% crew.forEach((member) => { %>
                    <% let firstName = member.name.split(' ')[0]; %>
                    <% let lastName = member.name.split(' ')[1]; %>
                    <div class="card"><div class="card-content"><div class="content">
                        <p><img src="<%= member.image %>" alt="<%= member.name %>"></p>
                        <p><strong><a href="/single-crew/<%= firstName %>/<%= lastName %>"><%= member.name %></a></strong></p>
                        <p><%= member.agency %></p>
                        <div class="mt-5">                        
                            <h5>Launches</h5>
                            <ul>
                            <% member.launches.forEach((launch) => { %>
                                <li><%= launch %></li>
                            <% }); %>
                            </ul>
                        </div>
                    </div></div></div>
                    <hr />
                  <% }); %>

                  <% if (crew.length === 0) { %>
                     <p><%= message %></p>
                  <% } %>
                </div>
            </div>
         </div>
      </div>
   </div>
</section>